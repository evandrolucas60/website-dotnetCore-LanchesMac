@model LanchesMac.ViewModels.SnackOrderViewModel

@{
    ViewData["Title"] = "SnacksOrders";
    decimal totalOrder = 0;
}

<h1>Lanches do Pedido</h1>
<hr />

<h3>Pedido : @Html.DisplayFor(model => @Model.Order.OrderId)</h3>
<h3>Pedido : @Html.DisplayFor(model => @Model.Order.Name)</h3>
<h3>Pedido : @Html.DisplayFor(model => @Model.Order.OrderDispatched)</h3>
<h3>Pedido : @Html.DisplayFor(model => @Model.Order.OrderDeliveredIn)</h3>

<table class="table">
    @foreach (var item in @Model.Order.OrderItems)
    {
        totalOrder += (item.Snack.Price * item.Quantity);
        <tr>
            <td align="right">
                <h3>@Html.DisplayFor(modelItem => item.Snack.SnackName)</h3>
            </td>
            <td align="right">
                <img src="@item.Snack.ImageUrl" class="img-fluid" height="100" width="100">
            </td>
            <td align="right">
                <h3>@string.Format("{0:C}", item.Snack.Price)</h3>
            </td>
            <td align="right">
                <h3>(@Html.DisplayFor(modelItem => item.Quantity))</h3>
            </td>
        </tr>
    }
    <tr>
        <td colspan="2">&nbsp;</td>
        <td align="right">
            <h3>Total do pedido : @string.Format("{0:C}", totalOrder)</h3>
        </td>
    </tr>
</table>
<a asp-action="Index" class="btn btn-outline-info">Retornar</a>